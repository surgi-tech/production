<odoo>
    <data>


        <record id="add_tree_views_kpi_kpi" model="ir.ui.view">
            <field name="name">KPI Employee</field>
            <field name="model">kpi.kpi</field>
            <field name="arch" type="xml">
                <tree string="KPI">
                    <field name="kra_kpi"/>
                    <field name="name"/>
                    <field name="weight" widget="percentage"/>
                    <field name="active_kpi"/>
                    <field name="interval_employee"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="form_views_page_kpi_employee" model="ir.ui.view">
            <field name="name">KPI Employee</field>
            <field name="model">kpi.kpi</field>
            <field name="arch" type="xml">
            <form string="" >
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="rest_kpi" type="object" string="Rest to draft"
                                attrs="{'invisible':['|',('state','=','draft')]}"/>
                        <button name="submit_kpi" type="object" string="Submit KPI" class="oe_highlight"
                                attrs="{'invisible':['|',('state','!=','draft'),('active_kpi','=',True)]}"/>
                        <button name="review_kpi" type="object" string="Reviewing KPI" class="oe_highlight"
                                attrs="{'invisible':[('state','!=','review')]}"/>
                        <button name="activate_kpi" type="object" string="Activate KPI" class="oe_highlight"
                                attrs="{'invisible':['|',('state','!=','waiting'),('active_kpi','=',True)]}" groups="hr_appraisal.group_hr_appraisal_manager"/>
                        <button name="cancel_kpi" type="object" string="Cancel KPI" class="oe_highlight"
                                attrs="{'invisible':[('state','!=','draft')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="kra_kpi"/>
                                <field name="name"/>
                                <field name="active_kpi" readonly='1' forcesave='1'/>

                            </group>
                            <group>
                                <field name="weight" widget="percentage"/>
                                <field name="interval_employee"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="kpi_employee_page_actions" model="ir.actions.act_window">
            <field name="name">KPI Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kpi.kpi</field>
            <field name="view_mode">tree,form</field>
            <!--<field name="domain">[('create_uid', '=', uid)]</field>-->
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_action_page_kpi" name="KPI Employee" parent="surgi_evaluation_menuitem"
                  action="kpi_employee_page_actions" groups="hr.group_hr_user" sequence="6"/>


    </data>
</odoo>
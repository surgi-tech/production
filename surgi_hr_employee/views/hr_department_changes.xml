<?xml version="1.0"?>
<odoo>
	<data>
		<record id="view_hr_department_filed_form" model="ir.ui.view">
			<field name="name">hr.department.filed.inherited.form</field>
			<field name="model">hr.department</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="hr.view_department_form" />
			<field name="arch" type="xml">

                    <xpath expr="//field[@name='name']" position="after">
                        <field name="department_type" widget="radio" options="{'horizontal': true}"/>
                    </xpath>

                    </field>
                </record>
	</data>
</odoo>

<odoo>
    <data>

        <record id="stock_quant_tree_inherit_main" model="ir.ui.view">
            <field name="name">stock.quant.tree.inherit</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="replace">
                    <tree decoration-danger="inventory_quantity &lt; 0" editable="bottom" create="0" edit="0" import="0" js_class="singleton_list">
                        <field name="id" invisible="1"/>
                        <field name="tracking" invisible="1"/>
                        <field name="product_id" attrs="{'readonly': [('id', '!=', False)]}" invisible="context.get('single_product', False)" readonly="context.get('single_product', False)" force_save="1" options="{'no_create': True}"/>
                        <field name="product_group" invisible="0"/>
                        <field name="product_categ_id" invisible="0"/>
                        <field name="location_id" attrs="{'readonly': [('id', '!=', False)]}" invisible="context.get('hide_location', False)" options="{'no_create': True}"/>
                        <field name="lot_id" groups="stock.group_production_lot" attrs="{                             'readonly': ['|', ('id', '!=', False), ('tracking', 'not in', ['serial', 'lot'])],                             'required': [('tracking', '!=', 'none')]                        }" invisible="context.get('hide_lot', False)" context="{'default_product_id': product_id, 'default_company_id': company_id}"/>
                        <field name="package_id" groups="stock.group_tracking_lot" attrs="{'readonly': [('id', '!=', False)]}"/>
                        <field name="owner_id" groups="stock.group_tracking_owner" attrs="{'readonly': [('id', '!=', False)]}" options="{'no_create': True}"/>
                        <field name="quantity" string="On Hand Quantity" invisible="1"/>
                        <field name="inventory_quantity" string="On Hand Quantity" readonly="0"/>
                        <field name="reserved_quantity" optional="hide"/>
                        <field name="product_uom_id" groups="uom.group_uom"/>
                        <field name="company_id" groups="base.group_multi_company" optional="show"/>
                    </tree>
                </xpath>
            </field>
        </record>














        <record id="view_picking_form_inherit" model="ir.ui.view">
            <field name="name">view.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <button name="action_assign" position="replace">
                    <button name="action_assign" states="confirmed,waiting" string="Reserve" type="object"
                            class="oe_highlight" groups="base.group_user"/>
                </button>
                <!--                <xpath expr="//field[@name='tender_order_id']" position="attributes">-->
                <!--                    <attribute name="string">Exchange Delivery Order</attribute>-->
                <!--&lt;!&ndash;                    <attribute name="readonly">1</attribute>&ndash;&gt;-->
                <!--                </xpath>-->

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="sales_order_id"
                           attrs="{'required':[('is_exchange','=',True)],'invisible':[('is_exchange','=',False)]}"/>
                    <field name="is_exchange" invisible="1"/>
                </xpath>

                <!--====================== A.Salama ==========================-->
                <xpath expr="//field[@name='priority']" position="replace">
                </xpath>

                <!--<xpath expr="//field[@name='partner_id']" position="before">
                    <field name="picking_type_id"/>
                </xpath>-->
                <xpath expr="//field[@name='location_dest_id']" position="after">
                    <field name="priority"/>
                    <!--                    <div style="Float:left;text-align:left;width:50%">-->
                    <!--                        <button name="compute_total_cocs" type="object" string="Total Cocs"/>-->
                    <!--                        <field name="total_cocs"/>-->
                    <!--                    </div>-->


                </xpath>

                <xpath expr="//group[1]" position="after">
                    <group>
                        <group>
<!--                            <group>-->
                                <group>
                                    <button name="compute_total_cocs" type="object" string="Total Cocs"/>
                                </group>
                                <group>
                                    <field name="total_cocs" nolabel="1" readonly="1"/>
                                </group>
<!--                            </group>-->
                        </group>
                    </group>
                </xpath>


                <!--<xpath expr="//page[@name='extra']/group/group/field[@name='picking_type_id']" position="replace">
                </xpath>-->

                <xpath expr="//field[@name='priority']" position="after">
                    <field name="receipt_exchange" invisible="1"/>
                    <field name="type_delivery_type" invisible="1"/>
                    <field name="gov_form_url" placeholder="https://" widget="url"
                           attrs="{'invisible':[('type_delivery_type','!=','gov')]}"/>
                    <field name="tender_order_id" attrs="{'invisible':[('receipt_exchange','!=',True)]}"/>
                    <field name="exchange_order_id" attrs="{'invisible':[('type_delivery_type','!=','exchange')]}"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page name="approvals" string="Approvals"
                          attrs="{'invisible':[('picking_type_code','!=','internal')]}">

                        <field name="approval_lines">
                            <tree delete="false">
                                <field name="warehouse_manager_id"/>
                                <field name="has_rule" invisible="1"/>
                                <field name="is_approved" attrs="{'readonly':[('has_rule','=',False)]}"/>
                            </tree>
                        </field>

                    </page>
                </xpath>

            </field>
        </record>

        <record id="view_approval_line" model="ir.ui.view">
            <field name="name">approval line</field>
            <field name="model">approval.line</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="is_approved" attrs="{'readonly':[('has_rule','=',False)]}"/>
                        <field name="has_rule" invisible="1"/>
                    </group>
                    <group>
                        <field name="warehouse_manager_id"/>
                        <field name="pick_id"/>
                    </group>
                </form>
            </field>
        </record>


    </data>
</odoo>